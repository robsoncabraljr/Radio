<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rpfm.projetoandroid.com.radiopopularlivre_rpfm.fragment.Frag1_AoVivo"
    android:background="@color/color_fundo">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/btnPlayPauseId"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="playPause"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/seekBarVolumeId"
        android:layout_marginTop="75dp"
        android:layout_marginStart="140dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:indeterminate="false"
        android:layout_alignParentEnd="false"
        android:max="10"
        android:progress="4"
        android:indeterminateOnly="false" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_aovivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="415dp"
        android:layout_gravity="end|bottom"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_contact_phone"
        android:layout_alignParentEnd="true"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>
